%tr{:class => cycle('', 'alt')}
  %td=page.created_at.strftime('%d %b, %Y')
  %td=link_to(page.title, [:admin, page])
  %td= truncate(page.body, :length => 50)
  %td=page.slug
  %td
    =link_to(image_tag('silk/pencil.png', :alt => 'edit'), admin_page_path(page))
    -form_for(:page, page, :url => [:admin, page], :html => {:class => 'delete-item', :method => :delete}) do |form|
      =image_submit_tag("silk/delete.png")

